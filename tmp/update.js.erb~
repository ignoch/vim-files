<%= remotipart_response do %>
  <%- if @campaign_item.errors.any? %>
    $(".popup #errors").html("<%= escape_javascript(render("errors_campaign_item")) %>")
  <%- else %>
    $('.popup #errors').html('Imagen Modificada con exito').fadeIn(200).delay(1000).fadeOut(200,function(){
	$('.popup').bPopup().close();
	$('#<%= "campaign_item_#{@campaign_item.id}" %>').replaceWith("<%= escape_javascript render(:partial => 'playlist/campaign_images', :locals => {:campaign_item => @campaign_item, :playlist => @playlist}) %>")
    });
 <% end %>
<% end %>
