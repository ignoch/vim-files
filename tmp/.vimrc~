set nocompatible
set autoindent
set smartindent
set showmatch
set virtualedit=all
syntax on
set ic
set nu
set ea
filetype plugin indent on
set gfn=Inconsolata\ Medium\ 11
set softtabstop=2
set shiftwidth=2
set noexpandtab
set mouse=a
set backup
set backupdir=~/.vim/tmp


if has("autocmd")
  au InsertEnter * silent execute "!gconftool-2 --type string --set /apps/gnome-terminal/profiles/Default/cursor_shape ibeam"
  au InsertLeave * silent execute "!gconftool-2 --type string --set /apps/gnome-terminal/profiles/Default/cursor_shape block"
  au VimLeave * silent execute "!gconftool-2 --type string --set /apps/gnome-terminal/profiles/Default/cursor_shape ibeam"
endif

" Ruby {
   " ruby standard 2 spaces, always
         au BufRead,BufNewFile *.rb,*.rhtml,*.erb,*.haml set shiftwidth=2 
         au BufRead,BufNewFile *.rb,*.rhtml,*.erb,*.haml set softtabstop=2 
         au BufRead,BufNewFile *.haml setf haml
         au BufRead,BufNewFile *.scss setf sass
   " }
   "
" RVM {
   " set statusline+=%{rvm#statusline()}
    set statusline=[%n]\ %<%.99f\ %h%w%m%r%y%{exists('g:loaded_rvm')?rvm#statusline():''}%=%-16(\ %l,%c-%v\ %)%P
" }
"if ! has("gui_running")
    set t_Co=256
"endif
"feel free to choose :set background=light for a different style
set background=dark
colors railscasts 
