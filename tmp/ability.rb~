class Ability
  include CanCan::Ability
 
  def initialize(user)
    user ||= User.new # guest user
 
    if user.role? :admin
      can :manage, :all
    end
    if user.role? :Cliente 
      can(:read, Campaign, :client_id => user.client.id) unless user.client_id.nil?
      can :list_campaign, :campaigns
      can :roll, :report
    end
  end
end
