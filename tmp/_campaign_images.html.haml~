= content_tag_for :div, campaign_item, :class => 'column' do
  .image
    - if playlists.nil?
      =image_tag(campaign_item.image.url(:small))
    -else
      = link_to image_tag(campaign_item.image.url(:small)), edit_playlist_campaign_item_url(playlist,campaign_item), :remote => true
  .details
    .week
      %table
        %tr
          %td D
          %td L
          %td M
          %td I
          %td J
          %td V
          %td S
        %tr
          %td!= campaign_item.sunday ? image_tag('/images/smallballs.png') : "&nbsp;"
          %td!= campaign_item.monday ? image_tag('/images/smallballs.png') : "&nbsp;"
          %td!= campaign_item.tuesday ? image_tag('/images/smallballs.png') : "&nbsp;"
          %td!= campaign_item.wednesday ? image_tag('/images/smallballs.png') : "&nbsp;"
          %td!= campaign_item.thursday ? image_tag('/images/smallballs.png') : "&nbsp;"
          %td!= campaign_item.friday ? image_tag('/images/smallballs.png') : "&nbsp;"
          %td!= campaign_item.saturday ? image_tag('/images/smallballs.png') : "&nbsp;"
    .dates.columns.on-2
      .column
        Hora Inicio:
      .column
        = campaign_item.time_start_field
        hrs.
      .column
        Hora fin:
      .column
        =campaign_item.time_end_field
        hrs.
