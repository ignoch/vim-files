class CampaignItemsController < InheritedResources::Base
  authorize_resource
  layout 'dashboard'
  belongs_to :campaign
  respond_to :html, :js

  def new
     @playlist = Playlist.find(params[:playlist_id])
	if params[:type] == "external"
	  @campaign_item = @playlist.external_items.build
	  @type = "Exterior"
	elsif params[:type] == "internal"
	  @campaign_item = @playlist.internal_items.build
	  @type = "Interior"
	else params[:type] == "cargador"
	  @campaign_item = @playlist.cargador_items.build
	  @type = "Cargador"
	end
  end
  
end
